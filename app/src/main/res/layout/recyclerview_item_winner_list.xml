<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/winners_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/winners_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="November 2020"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/winners_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name"
        app:layout_constraintHorizontal_bias="0.410"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/winners_date" />

    <TextView
        android:id="@+id/winners_score_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        app:layout_constraintHorizontal_bias="0.720"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/winners_name_header" />

    <TextView
        android:id="@+id/winners_first_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1st Place"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/winners_name_header" />

    <TextView
        android:id="@+id/winners_first_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/winners_name_header"
        app:layout_constraintRight_toRightOf="@id/winners_name_header"
        app:layout_constraintTop_toTopOf="@id/winners_first_header"
        tools:text="Bob"/>

    <TextView
        android:id="@+id/winners_first_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/winners_score_header"
        app:layout_constraintRight_toRightOf="@id/winners_score_header"
        app:layout_constraintTop_toTopOf="@id/winners_first_header"
        tools:text="120"/>

    <TextView
        android:id="@+id/winners_second_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2nd Place"
        app:layout_constraintLeft_toLeftOf="@id/winners_first_header"
        app:layout_constraintTop_toBottomOf="@id/winners_first_header" />

    <TextView
        android:id="@+id/winners_second_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/winners_name_header"
        app:layout_constraintRight_toRightOf="@id/winners_name_header"
        app:layout_constraintTop_toTopOf="@id/winners_second_header"
        tools:text="Frank"/>

    <TextView
        android:id="@+id/winners_second_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/winners_score_header"
        app:layout_constraintRight_toRightOf="@id/winners_score_header"
        app:layout_constraintTop_toTopOf="@id/winners_second_header"
        tools:text="80"/>

    <TextView
        android:id="@+id/winners_third_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="3rd Place"
        app:layout_constraintLeft_toLeftOf="@id/winners_first_header"
        app:layout_constraintTop_toBottomOf="@id/winners_second_header" />

    <TextView
        android:id="@+id/winners_third_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/winners_name_header"
        app:layout_constraintRight_toRightOf="@id/winners_name_header"
        app:layout_constraintTop_toTopOf="@id/winners_third_header"
        tools:text="Jane"/>

    <TextView
        android:id="@+id/winners_third_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/winners_score_header"
        app:layout_constraintRight_toRightOf="@id/winners_score_header"
        app:layout_constraintTop_toTopOf="@id/winners_third_header"
        tools:text="45"/>


</androidx.constraintlayout.widget.ConstraintLayout>