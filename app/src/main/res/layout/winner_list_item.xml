<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/winners_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/winners_first_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1st Place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/winners_first_player_name"
        app:layout_constraintTop_toBottomOf="@id/winners_date" />

    <TextView
        android:id="@+id/winners_first_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/winners_first_header"
        app:layout_constraintRight_toLeftOf="@id/winners_first_score"
        app:layout_constraintTop_toTopOf="@id/winners_first_header" />

    <TextView
        android:id="@+id/winners_first_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/winners_first_player_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/winners_first_header" />

    <TextView
        android:id="@+id/winners_second_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2nd Place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/winners_second_player_name"
        app:layout_constraintTop_toBottomOf="@id/winners_first_header" />

    <TextView
        android:id="@+id/winners_second_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/winners_second_header"
        app:layout_constraintRight_toLeftOf="@id/winners_second_score"
        app:layout_constraintTop_toTopOf="@id/winners_second_header" />

    <TextView
        android:id="@+id/winners_second_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/winners_second_player_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/winners_second_header" />

    <TextView
        android:id="@+id/winners_third_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="3rd Place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/winners_third_player_name"
        app:layout_constraintTop_toBottomOf="@id/winners_second_header" />

    <TextView
        android:id="@+id/winners_third_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/winners_third_header"
        app:layout_constraintRight_toLeftOf="@id/winners_third_score"
        app:layout_constraintTop_toTopOf="@id/winners_third_header" />

    <TextView
        android:id="@+id/winners_third_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/winners_third_player_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/winners_third_header" />

</androidx.constraintlayout.widget.ConstraintLayout>