<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@id/member_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/member_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="100"
        app:layout_constraintLeft_toRightOf="@id/checkbox"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rmember_image"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/rmember_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="12dp"
            android:text="Nickname:"
            app:layout_constraintLeft_toRightOf="@id/rmember_image"
            app:layout_constraintTop_toTopOf="@id/rmember_image" />

        <TextView
            android:id="@+id/rmember_name_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            app:layout_constraintLeft_toRightOf="@id/rmember_name_header"
            app:layout_constraintTop_toTopOf="@id/rmember_name_header" />

        <TextView
            android:id="@+id/rmember_groups_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Groups:"
            app:layout_constraintLeft_toLeftOf="@id/rmember_name_header"
            app:layout_constraintTop_toBottomOf="@id/rmember_name_header" />

        <TextView
            android:id="@+id/rmember_groups_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/rmember_name_output"
            app:layout_constraintTop_toTopOf="@id/rmember_groups_header" />

        <ImageButton
            android:id="@+id/rmember_group_member_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_close_black_12dp"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--
    <include
        android:id="@+id/member_layout"
        layout="@layout/recyclerview_item_member"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/checkbox"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="100" />
        -->

</androidx.constraintlayout.widget.ConstraintLayout>