<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/winners_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="4dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/monthly_scores_name_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.275" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/monthly_scores_name_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <TextView
        android:id="@+id/winners_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="November 2020"
        style="@style/TextAppearance.MdcTypographyStyles.Headline6"/>

    <TextView
        android:id="@+id/winners_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/nickname_header"
        app:layout_constraintLeft_toRightOf="@id/monthly_scores_name_start"
        app:layout_constraintTop_toBottomOf="@id/winners_date"
        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"/>

    <TextView
        android:id="@+id/winners_score_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_header"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/winners_name_header"
        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"/>

    <TextView
        android:id="@+id/winners_first_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/first_place_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/winners_name_header"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

    <TextView
        android:id="@+id/winners_first_player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/monthly_scores_name_start"
        app:layout_constraintRight_toLeftOf="@id/monthly_scores_name_end"
        app:layout_constraintTop_toTopOf="@id/winners_first_header"
        tools:text="Bob"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

    <TextView
        android:id="@+id/winners_first_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/winners_score_header"
        app:layout_constraintRight_toRightOf="@id/winners_score_header"
        app:layout_constraintTop_toTopOf="@id/winners_first_header"
        tools:text="120"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

    <TextView
        android:id="@+id/winners_second_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/second_place_header"
        app:layout_constraintLeft_toLeftOf="@id/winners_first_header"
        app:layout_constraintTop_toBottomOf="@id/winners_first_player_name"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

    <TextView
        android:id="@+id/winners_second_player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/monthly_scores_name_start"
        app:layout_constraintRight_toLeftOf="@id/monthly_scores_name_end"
        app:layout_constraintTop_toTopOf="@id/winners_second_header"
        tools:text="Jane Filippa III Of Canada"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

    <TextView
        android:id="@+id/winners_second_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/winners_first_score"
        app:layout_constraintTop_toTopOf="@id/winners_second_header"
        tools:text="80"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

    <TextView
        android:id="@+id/winners_third_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/third_place_header"
        app:layout_constraintLeft_toLeftOf="@id/winners_first_header"
        app:layout_constraintTop_toBottomOf="@id/winners_second_player_name"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

    <TextView
        android:id="@+id/winners_third_player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/monthly_scores_name_start"
        app:layout_constraintRight_toLeftOf="@id/monthly_scores_name_end"
        app:layout_constraintTop_toTopOf="@id/winners_third_header"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"
        tools:text="Frank"/>

    <TextView
        android:id="@+id/winners_third_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/winners_first_score"
        app:layout_constraintTop_toTopOf="@id/winners_third_header"
        tools:text="45"
        style="@style/TextAppearance.MdcTypographyStyles.Body2"/>

</androidx.constraintlayout.widget.ConstraintLayout>