<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/team_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/place"
        app:layout_constraintTop_toTopOf="@id/place"
        android:layout_marginLeft="16dp"
        android:text="@string/team"/>

    <TextView
        android:id="@+id/team_output"
        app:layout_constraintLeft_toRightOf="@id/team_textview"
        app:layout_constraintTop_toTopOf="@id/team_textview"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"/>

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1st Place"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/team_output"
        app:layout_constraintTop_toTopOf="@id/team_textview"
        tools:text="Bailey, Theo, Adam" />

    <TextView
        android:id="@+id/score_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/team_textview"
        app:layout_constraintRight_toLeftOf="@id/score_ending"
        tools:text="30"/>

    <TextView
        android:id="@+id/score_ending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/team_textview"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"
        android:text="@string/score_measurement_marker"/>

</androidx.constraintlayout.widget.ConstraintLayout>