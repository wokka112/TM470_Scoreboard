<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/details_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_header"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/details_name_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/details_name_header"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_output" />

    <TextView
        android:id="@+id/details_date_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Created:"
        app:layout_constraintTop_toBottomOf="@id/details_name_header"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_header"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/details_date_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/details_date_header"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_output"/>

    <TextView
        android:id="@+id/details_games_played_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games Played:"
        app:layout_constraintTop_toBottomOf="@id/details_date_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/details_games_played_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/details_games_played_header"
        app:layout_constraintLeft_toRightOf="@id/details_games_played_header"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/details_members_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members:"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_header"
        app:layout_constraintTop_toBottomOf="@id/details_games_played_header"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/details_members_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/details_members_header"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_output"/>

    <TextView
        android:id="@+id/details_description_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        app:layout_constraintTop_toBottomOf="@id/details_members_header"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_header"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/details_description_output"
        android:layout_width="260dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="@id/details_description_header"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_output" />

    <TextView
        android:id="@+id/details_notes_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes:"
        app:layout_constraintTop_toBottomOf="@id/details_description_output"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_header"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/details_notes_output"
        android:layout_width="260dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="@id/details_notes_header"
        app:layout_constraintLeft_toLeftOf="@id/details_games_played_output"/>

    <Button
        android:id="@+id/details_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/details_notes_output"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/details_reset_button"
        android:text="Edit Group"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/details_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/details_edit_button"
        app:layout_constraintLeft_toRightOf="@id/details_edit_button"
        app:layout_constraintRight_toLeftOf="@id/details_delete_button"
        android:text="Reset Group"/>

    <Button
        android:id="@+id/details_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/details_edit_button"
        app:layout_constraintLeft_toRightOf="@id/details_reset_button"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Delete Group"/>

</androidx.constraintlayout.widget.ConstraintLayout>