        <TextView
            android:id="@+id/bgadd_difficulty_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Real Name:"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/bgadd_name_textview"
            app:layout_constraintTop_toBottomOf="@id/bgadd_name_edittext" />

        <TextView
            android:id="@+id/bgadd_min_players_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@id/bgadd_difficulty_textview"
            app:layout_constraintTop_toBottomOf="@id/bgadd_difficulty_edittext" />

        <TextView
            android:id="@+id/bgadd_categories_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/bgadd_max_players_edittext"
            app:layout_constraintTop_toBottomOf="@id/bgadd_max_players_edittext"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:text="Categories"/>

        <TextView
            android:id="@+id/bgadd_categories_output"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            app:layout_constraintLeft_toLeftOf="@id/bgadd_categories_header"
            app:layout_constraintTop_toBottomOf="@id/bgadd_categories_header"
            app:layout_constraintHorizontal_bias="0"
            tools:text="Strategy, Luck, Ameritrash"
            android:visibility="gone"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/bgAdd_searchable_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bgadd_max_players_edittext"
            android:layout_marginRight="12dp"
            />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/bgadd_categories_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bgadd_categories_header"
            app:layout_constraintLeft_toLeftOf="@id/bgadd_categories_header"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintWidth_default="wrap"
            app:singleSelection="true"/>

        <TextView
            android:id="@+id/bgadd_play_modes_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Play Modes (Pick as many as are viable.)"
            app:layout_constraintLeft_toLeftOf="@id/bgadd_categories_header"
            app:layout_constraintTop_toBottomOf="@id/bgadd_categories_chip_group" />

        <TextView
            android:id="@+id/bgadd_team_options_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="Team Options"
            app:layout_constraintLeft_toLeftOf="@id/bgadd_categories_output"
            app:layout_constraintTop_toBottomOf="@id/bgadd_play_modes_container"
            app:layout_goneMarginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>