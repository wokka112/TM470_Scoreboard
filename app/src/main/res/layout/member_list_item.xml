<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <ImageView
        android:id="@+id/member_image"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/member_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:text="Nickname:"
        app:layout_constraintLeft_toRightOf="@id/member_image"
        app:layout_constraintTop_toTopOf="@id/member_image" />

    <TextView
        android:id="@+id/member_name_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toRightOf="@id/member_name_header"
        app:layout_constraintTop_toTopOf="@id/member_name_header" />

    <TextView
        android:id="@+id/member_groups_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Groups:"
        app:layout_constraintLeft_toLeftOf="@id/member_name_header"
        app:layout_constraintTop_toBottomOf="@id/member_name_header" />

    <TextView
        android:id="@+id/member_groups_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/member_name_output"
        app:layout_constraintTop_toTopOf="@id/member_groups_header" />
</androidx.constraintlayout.widget.ConstraintLayout>